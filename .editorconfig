root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.toml]
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[{assets/**/*,layouts/**/*}]
insert_final_newline = false

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 4
